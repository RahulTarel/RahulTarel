package array.logic;

import java.util.Scanner;

public class ReverseNumberArray {

	public static void main(String[] args) {
		System.out.print("enter 5 numbers in array to reverse print it");
		Scanner sc = new Scanner(System.in);
		String userInp = sc.next();
		int[] array = new int[5];
		while (!"No".equals(userInp)) {
			int i = 0;
			array[0] = sc.nextInt();
			i++;
		}

		int left = 0, right = array.length - 1;
		while (left < right) {
			int temp = array[left];
			array[left] = array[right];
			array[right] = temp;
			left++;
			right--;
		}
	}
}
